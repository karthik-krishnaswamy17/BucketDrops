<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bd_logo"
        android:layout_width="@dimen/bd_width_logo"
        android:layout_height="@dimen/bd_height_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="84dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/btn_drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bd_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:fontFamily="sans-serif-thin"
        android:paddingBottom="8dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="8dp"
        android:text="@string/str_add_drop"
        android:textAllCaps="false"
        android:textColor="@color/btn_add_color"
        android:textSize="28sp" />


</RelativeLayout>